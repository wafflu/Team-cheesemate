<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="team.cheese.dao.AddrCdDao">

    <!--    *** 모든 addr_cd를 개수를 가져온다 ***-->
    <select id="getAddrCdCnt" resultType="int">
        SELECT count(*)
        FROM addr_cd
    </select>

    <!--    *** 모든 addr_cd를 가져온다-->
    <select id="getAllAddrCd" resultType="AddrCdDto">
        SELECT *
        FROM addr_cd
    </select>

    <!--    *** 아이디로 특정 데이터만 가져온다 ***-->
    <select id="getAddrCdByUserId" parameterType="String" resultType="AddrCdDto">
        SELECT *
        FROM addr_cd
        WHERE ur_id = #{userId}
    </select>

    <!--    *** 유저의 주소코드 추가 ***-->
    <insert id="insertAddrCd" parameterType="AddrCdDto">
        INSERT INTO addr_cd (ur_id, addr_cd, addr_name, state, first_date, first_id, last_date, last_id)
        VALUES (#{ur_id}, #{addr_cd}, #{addr_name}, #{state}, #{first_date, jdbcType=TIMESTAMP}, #{first_id}, #{last_date, jdbcType=TIMESTAMP}, #{last_id})
    </insert>


</mapper>